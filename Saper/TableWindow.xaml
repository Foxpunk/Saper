<Window x:Class="Saper.TableWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Table of Records" Height="300" Width="400">
    <Grid>
        <!-- DataGrid для отображения таблицы записей -->
        <DataGrid Name="RecordTable" AutoGenerateColumns="False" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <!-- Определение колонок таблицы -->
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Easy" Binding="{Binding EasyTime}" Width="*"/>
                <DataGridTextColumn Header="Medium" Binding="{Binding MediumTime}" Width="*"/>
                <DataGridTextColumn Header="Hard" Binding="{Binding HardTime}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
