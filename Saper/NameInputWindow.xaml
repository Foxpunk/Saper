<Window x:Class="Saper.NameInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter Name" Height="150" Width="300">
    <Grid>
        <Label Content="Enter your name:" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="10"/>
        <TextBox Name="NameInput" VerticalAlignment="Center" HorizontalAlignment="Center" Width="200"/>
        <Button Content="OK" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="100" Margin="10" Click="OK_Click"/>
    </Grid>
</Window>
